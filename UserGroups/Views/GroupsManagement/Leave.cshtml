@model UserGroups.Models.Group

@{
    ViewData["Title"] = "Leave " + Model.Name;;
}




<div class="row">
    <div class="col-md-6">

        @if (ViewData["Error"] != null)
        {
            <div class="alert alert-danger" role="alert">
                @ViewData["Error"]
            </div>
        }

        <div class="card">
            <div class="card-header bg-warning text-white">
                <strong class="card-title">Leave @Html.DisplayFor(model => model.Name)</strong>
            </div>
            <div class="card-body">

                <h5>Are you sure you want to leave <i>@Html.DisplayFor(model => model.Name)</i>?</h5>
                <hr />
                <div>
                    <form asp-action="Leave">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Leave" class="btn btn-warning" />
                        <a asp-action="Index" class="btn btn-info">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>